<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="Poten2501.Styles.PageStyles"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="GridStyles" TargetType="Grid">
        <Setter Property="ColumnDefinitions">
            <Setter.Value>
                <ColumnDefinitionCollection>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="70*" />
                    <ColumnDefinition Width="Auto" />
                </ColumnDefinitionCollection>
            </Setter.Value>
        </Setter>
        <Setter Property="RowDefinitions">
            <Setter.Value>
                <RowDefinitionCollection>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="250" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </RowDefinitionCollection>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ListViewStyle" TargetType="ListView">
        <Setter Property="BackgroundColor" Value="#ccffff" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="Grid.Column" Value="0" />
        <!--<Setter Property="Grid.Row" Value="0" />
        <Setter Property="Grid.RowSpan" Value="1" />-->
    </Style>

    <Style x:Key="MeasureParamsStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="#ddddff" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="Grid.Column" Value="1" />
        <Setter Property="Grid.Row" Value="0" />
        <Setter Property="Grid.RowSpan" Value="1" />
        <Setter Property="MaximumHeightRequest" Value="100" />
    </Style>


    <Style x:Key="ScottplotStyle" TargetType="Frame">
        <Setter Property="Grid.Column" Value="1" />
        <Setter Property="Grid.Row" Value="1" />
        <Setter Property="BackgroundColor" Value="#fff" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="BorderColor" Value="#faf" />
        <Setter Property="BackgroundColor" Value="#eee" />
        <Setter Property="Grid.RowSpan" Value="4" />
    </Style>

    <Style x:Key="TerminalStyle" TargetType="Frame">
        <Setter Property="Grid.Column" Value="1" />
        <Setter Property="Grid.Row" Value="2" />
        <Setter Property="BackgroundColor" Value="#fff" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="BorderColor" Value="#ffa" />
        <Setter Property="BackgroundColor" Value="#eea" />
        <Setter Property="Grid.RowSpan" Value="2" />
    </Style>

    <Style x:Key="CVParamStyle" TargetType="Frame">
        <Setter Property="Grid.Column" Value="2" />
        <Setter Property="Grid.Row" Value="0" />
        <Setter Property="BackgroundColor" Value="#fff" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="BorderColor" Value="#aff" />
        <Setter Property="BackgroundColor" Value="#fdf" />
        <Setter Property="Grid.RowSpan" Value="5" />
    </Style>

    <Style x:Key="DPVParametersStyle" TargetType="Frame">
        <Setter Property="Grid.Column" Value="2" />
        <Setter Property="Grid.Row" Value="0" />
        <Setter Property="BackgroundColor" Value="#fff" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="BorderColor" Value="#aff" />
        <Setter Property="BackgroundColor" Value="#fdf" />
        <Setter Property="Grid.RowSpan" Value="5" />
    </Style>

    <Style x:Key="SWVParametersStyle" TargetType="Frame">
        <Setter Property="Grid.Column" Value="2" />
        <Setter Property="Grid.Row" Value="0" />
        <Setter Property="BackgroundColor" Value="#fff" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="BorderColor" Value="#aff" />
        <Setter Property="BackgroundColor" Value="#fdf" />
        <Setter Property="Grid.RowSpan" Value="5" />
    </Style>


    <Style x:Key="CAParametersStyle" TargetType="Frame">
        <Setter Property="Grid.Column" Value="2" />
        <Setter Property="Grid.Row" Value="0" />
        <Setter Property="BackgroundColor" Value="#fff" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="BorderColor" Value="#aff" />
        <Setter Property="BackgroundColor" Value="#fdf" />
        <Setter Property="Grid.RowSpan" Value="4" />
    </Style>


    <Style x:Key="CVAnalyzeStyle" TargetType="Frame">
        <Setter Property="Grid.Column" Value="2" />
        <Setter Property="Grid.Row" Value="0" />
        <Setter Property="BackgroundColor" Value="#fff" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="BorderColor" Value="#aff" />
        <Setter Property="BackgroundColor" Value="#fdf" />
        <Setter Property="Grid.RowSpan" Value="5" />
    </Style>


    <Style x:Key="CommConnectStyle" TargetType="Frame">
        <Setter Property="Grid.Column" Value="0" />
        <Setter Property="Grid.Row" Value="3" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="BorderColor" Value="#ffb" />
        <Setter Property="BackgroundColor" Value="#ccffee" />
        <Setter Property="Grid.RowSpan" Value="2" />
    </Style>


</ResourceDictionary>