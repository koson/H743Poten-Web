<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Poten2501.MainPage"
             xmlns:viewModel="clr-namespace:Poten2501.ViewModels"
             x:DataType="viewModel:MainPageViewModel">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Available Ports:" />
            <Picker ItemsSource="{Binding AvailablePorts}" 
                SelectedItem="{Binding SelectedPort}" />

            <Label Text="Baud Rate:" />
            <Picker ItemsSource="{Binding BaudRates}" 
                SelectedItem="{Binding SelectedBaudRate}" />

            <Button Text="Refresh Ports" 
                Command="{Binding RefreshPortsCommand}" />


            <Label Text="Port is open?" />
            <Label Text="{Binding IsPortOpen}" />

            <Button Text="{Binding ConnectButtonText}"
                Command="{Binding ConnectCommand}"/>

            <Label Text="Data to Send:" />
            <Entry Text="{Binding DataToSend}" />

            <Button Text="Send Data" 
                Command="{Binding SendDataCommand}" />

            <Label Text="Received Data:" />
            <Editor Text="{Binding ReceivedData}" 
                IsReadOnly="True"
                HeightRequest="200" />

            <Button Text="Clear Received Data"
                Command="{Binding ClearReceivedDataCommand}" />

        </VerticalStackLayout>
    </ScrollView>


</ContentPage>
