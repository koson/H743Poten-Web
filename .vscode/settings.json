{
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.allowWorkspaceConfiguration": true,
    
    // ป้องกันไม่ให้ copilot ใช้ background terminal
    "terminal.integrated.commandsToSkipShell": [],
    
    // กำหนดให้ใช้ terminal ปัจจุบันแทนการสร้างใหม่
    "terminal.integrated.splitCwd": "workspaceRoot",
    
    // รัน dev command ทุกครั้งที่เปิด terminal
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.shellIntegration.showWelcome": false,
    
    // Platform-specific terminal profiles
    "terminal.integrated.profiles.windows": {
        "H743Poten-WSL": {
            "path": "wsl.exe",
            "args": [
                "bash",
                "-ic",
                "cd ${workspaceFolder} && bash"
            ]
        },
        "Ubuntu (WSL)": {
            "source": "WSL",
            "path": "wsl.exe",
            "args": ["-d", "Ubuntu"]
        }
    },
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "/bin/bash",
            "args": ["-l"]
        }
    },
    
    // Default profiles per platform
    "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
    "terminal.integrated.defaultProfile.linux": "bash",
    
    // Use workspace root as terminal CWD
    "terminal.integrated.cwd": "${workspaceFolder}",
    
    // Git settings
    "git.defaultCloneDirectory": "${workspaceFolder}",
    "git.openRepositoryInParentFolders": "always",
    
    // Editor settings
    "editor.fontFamily": "Cascadia code, monospace",
    "editor.fontSize": 15,
    "debug.console.fontSize": 15,
    "scm.inputFontSize": 14,
    "terminal.integrated.fontSize": 15,
    "chat.editor.fontSize": 16,
    "markdown.preview.fontSize": 15,

    // Python settings - use workspace-relative paths
    "python.defaultInterpreterPath": "./poten-env/bin/python",
    "python.terminal.activateEnvironment": true,
  
    
    // File watcher exclusions
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/__pycache__/**": true,
        "**/poten-env/**": true
    }
}
