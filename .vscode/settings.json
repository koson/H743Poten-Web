{
    "terminal.integrated.cwd": "${workspaceFolder}",
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.allowWorkspaceConfiguration": true,
    
    // ป้องกันไม่ให้ copilot ใช้ background terminal
    "terminal.integrated.commandsToSkipShell": [],
    
    // กำหนดให้ใช้ terminal ปัจจุบันแทนการสร้างใหม่
    "terminal.integrated.splitCwd": "workspaceRoot",
    
    // รัน dev command ทุกครั้งที่เปิด terminal
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.shellIntegration.showWelcome": false,
    "terminal.integrated.profiles.windows": {
        "H743Poten-WSL": {
            "path": "wsl.exe",
            "args": [
                "bash",
                "-ic",
                "source /mnt/d/GitHubRepos/__Potentiostat/poten-2025/H743Poten/H743Poten-Web/shell_setup.sh && cd /mnt/d/GitHubRepos/__Potentiostat/poten-2025/H743Poten/H743Poten-Web && bash"
            ]
        },
        "H743Poten-Dev": {
            "path": "wsl.exe",
            "args": [
                "bash",
                "-ic",
                "source /mnt/d/GitHubRepos/__Potentiostat/poten-2025/H743Poten/H743Poten-Web/shell_setup.sh && cd /mnt/d/GitHubRepos/__Potentiostat/poten-2025/H743Poten/H743Poten-Web && python3 auto_dev.py start"
            ]
        },
        "Ubuntu (WSL)": {
            "source": "WSL",
            "path": "wsl.exe",
            "args": ["-d", "Ubuntu"]
        }
    },
    "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
    
    // Git settings
    "git.defaultCloneDirectory": "${workspaceFolder}",
    "git.openRepositoryInParentFolders": "always",
    "editor.fontFamily": "Cascadia, monospace",
    "editor.fontSize": 15,
    "debug.console.fontSize": 15,
    "scm.inputFontSize": 14,
    "terminal.integrated.fontSize": 15,
    "chat.editor.fontSize": 16,
    "markdown.preview.fontSize": 15
}
