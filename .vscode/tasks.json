{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "H743Poten: Start Development Server",
			"type": "shell",
			"command": "bash",
			"args": ["-c", "source poten-env/bin/activate && python auto_dev.py start"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
			"presentation": { 
				"echo": true, 
				"reveal": "always", 
				"focus": false, 
				"panel": "shared" 
			},
			"problemMatcher": []
		},
		{
			"label": "H743Poten: Stop Development Server",
			"type": "shell",
			"command": "bash",
			"args": ["-c", "source poten-env/bin/activate && python auto_dev.py stop"],
